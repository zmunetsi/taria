<div class = "container">

  <div class="row">
    <div class="col s12 m6">
      
      <h3>Create Room</h3>
      <form id = "create-room" action = "/rooms" method = "GET" class="col s12">
        <input type="hidden" name="username" value = "<%= userName %>" />
        <input type="hidden" name="roomid" value = "" />
        <input type="hidden" name="host" value = "true" />
      
        
        <div class="input-field col s12">
          <input id="roomname" type="text" name = "roomname" class="validate" required>
          <label for="username">Room name</label>
          
        </div>
        <div class="input-field col s12">
          <input id="roomcapacity" type="text" name = "roomcapacity" class="validate" required>
          <label for="roomcapacity">Capacity</label>
        </div>

        <button id = "createRoomBtn" class="green btn waves-effect waves-green btn-flat" type="submit">Create Room
        </button>


    </form>
   
      </div>



      <div class="col s12 m6">
        <h3>Already have an room id?</h3>
        <form class = "join-room" action = "/rooms" method = "GET" class="col s12">
          <input type="hidden" name="username" value = "<%= userName %>" />
          <input type="hidden" name="host" value = "false" />
          
          <div class="input-field col s12">
             
            <input id="room-id" type="text" name = "room_id" class="validate" required />
            <label for="room-id">Room Id</label>
            
          </div>

  
          <button id = "joinRoomBtn" class="green btn waves-effect waves-green btn-flat" type="submit">Enter Room
          </button>
  
  
      </form>
     
        </div>
    </div>
  </div>
           


</div>



