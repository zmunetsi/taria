  <script>var username = "<%=username; %>" </script>
  <script>var ROOM_ID= "<%= roomid; %>" </script>
  <script>var roomcapacity = "<%= roomcapacity; %>" </script>
  <script>var roomname = "<%= roomname; %>" </script>
  <script>var host = "<%= host; %>" </script>
